doctype html
html(lang="tr")
    include ../partials/head
    block styles
        style
            include:clean-css ../../public/static/css/reset.css
            include:clean-css ../../public/static/css/styles.css
            include:clean-css ../../public/static/css/highlight/monokai-sublime.css
    body
        .container
            include ../partials/header
            main.post.markdown-body
                | !{ content }
            include ../partials/footer

            script
                include ../../node_modules/fontfaceobserver/fontfaceobserver.standalone.js
                include ../../public/static/js/highlight/highlight.pack.js
                include:uglify-js:babel ../../public/static/js/init-fonts.js
                include:uglify-js:babel ../../public/static/js/init-highlight.js
                include:uglify-js:babel ../../public/static/js/init-theme-controls.js
